<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aferrari.trailead">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SEND_EMAIL" />

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_trailead_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_trailead_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TraiLead">
        <activity
            android:name="com.aferrari.trailead.app.ui.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".app.ui.RouterHomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data
                    android:host="home"
                    android:scheme="@string/scheme_app_name" />
            </intent-filter>
        </activity>
        <activity
            android:name=".app.ui.trainee.TraineeActivity"
            android:exported="true"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data
                    android:host="@string/host_trainee_home"
                    android:scheme="@string/scheme_app_name" />
            </intent-filter>
        </activity>
        <activity
            android:name=".app.ui.leader.LeaderActivity"
            android:exported="true"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data
                    android:host="@string/host_leader_home"
                    android:scheme="@string/scheme_app_name" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.aferrari.trailead.app.ui.login.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data
                    android:host="@string/host_login"
                    android:scheme="@string/scheme_app_name" />
            </intent-filter>
        </activity>
    </application>

</manifest>