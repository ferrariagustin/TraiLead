<resources>
    <!-- Base application theme. -->
    <style name="Theme.TraiLead" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/secondaryColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Bg -->
        <item name="colorOnBackground">@color/primaryBgLightColor</item>
        <!--        <item name="background">?attr/colorOnBackground</item>-->

        <item name="background">@color/primaryBgLightColor</item>

        <!-- Color de la status bar -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>

        <!-- Iconos oscuros en la status bar si el color es claro (API 23+) -->
        <item name="android:windowLightStatusBar">true</item>

    </style>
</resources>